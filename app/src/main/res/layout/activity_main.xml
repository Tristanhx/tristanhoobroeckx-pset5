<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trist.tristanhoobroeckx_pset5.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittxt"
        android:hint="New Category"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittxt2"
        android:hint="New Detail"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/edittxt"
        android:text="Add Category"
        android:onClick="addItem"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/edittxt"
        android:layout_centerHorizontal="true"
        android:text="Add Detail"
        android:onClick="addItem"
        />

    <ListView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_below="@+id/button"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailslist"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/list"
        />
</RelativeLayout>
